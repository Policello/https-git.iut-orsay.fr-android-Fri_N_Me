<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Général">
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_activate_night_mode"
            android:summaryOff="Interface colorée"
            android:summaryOn="Interface sombre"
            android:title="Mode nuit"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Localisation">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_precise_localisation"
            android:summaryOn="Localisation précise"
            android:summaryOff="Localisation imprécise"
            android:title="Précision de la localisation" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Notifications">
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_activate_notifications"
            android:summaryOn="Notifications activées"
            android:summaryOff="Notifications désactivées"
            android:title="Activer les Notifications" />
    </PreferenceCategory>

</PreferenceScreen>
